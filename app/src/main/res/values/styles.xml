<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#84bd00</item>
    </style>

    <!-- Main activity theme. -->
    <style name="SpotifyStreamerTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.SpotifyStreamer.NoTitle</item>
    </style>

    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="AppTheme">
    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.SpotifyStreamer.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">showTitle|useLogo</item>
        <item name="android:logo">@drawable/spotify_icon</item>
    </style>

</resources>
