<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#0000FF</item>
        <item name="colorPrimaryDark">#0000AA</item>
    </style>

    <!-- Main activity theme. -->
    <style name="SpotifyStreamerTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.SpotifyStreamer</item>
    </style>

    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="AppTheme">
    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.SpotifyStreamer" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showTitle</item>
        <item name="logo">@drawable/ic_launcher</item>
    </style>

</resources>
